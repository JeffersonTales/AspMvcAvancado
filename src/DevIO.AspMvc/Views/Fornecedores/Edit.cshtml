@model DevIO.AspMvc.ViewModels.FornecedorViewModel

@{
    ViewBag.Title = "Editar Fornecedor";
}

<h2>@ViewBag.Title</h2>
<hr />
<br />

@using (Html.BeginForm()) {
    
    @Html.AntiForgeryToken()
<div class="form-horizontal">

    @Html.ValidationSummary(excludePropertyErrors: true,
                            message: "",
                            htmlAttributes: new { @class = "text-danger" })

    @Html.HiddenFor(expression: model => model.Id)

    <div class="form-group">
        @Html.LabelFor(expression: model => model.Nome,
                       htmlAttributes: new { @class = "control-label col-md-2" })

        <div class="col-md-3">
            @Html.EditorFor(expression: model => model.Nome,
                            additionalViewData: new { @class = "form-control" })

            @Html.ValidationMessageFor(expression: model => model.Nome,
                                       validationMessage: "",
                                       htmlAttributes: new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(expression: model => model.Documento,
                       htmlAttributes: new { @class = "control-label col-md-2" })

        <div class="col-md-3">
            @Html.EditorFor(expression: model => model.Documento,
                            additionalViewData: new { @class = "form-control" })

            @Html.ValidationMessageFor(expression: model => model.Documento,
                                       validationMessage: "",
                                       htmlAttributes: new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(expression: model => model.TipoFornecedor,
                       htmlAttributes: new { @class = "control-label col-md-2" })

        <div class="col-md-3">
           @Html.RadioButtonFor(expression: m => m.TipoFornecedor, 
                                value: "1") Pessoa Física <br /> 

           @Html.RadioButtonFor(expression: m => m.TipoFornecedor, 
                                value: "2") Pessoa Jurídica <br /> 
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(expression: model => model.Ativo, 
                       htmlAttributes: new {@class="control-label col-md-2"})

        <div class="col-md-3">
            @Html.CheckBoxFor(expression: model => model.Ativo, 
                              htmlAttributes: new {@class = "form-control"})
        </div>
    </div>

    <div class="col-md-offset-2">
        <input type="submit" value="Salvar" class="btn btn-primary" />
        <a class="btn btn-info" href="@Url.Action(actionName:"Index",
                                                  controllerName:"Fornecedores")">Voltar</a>
    </div>

</div>


}