@model DevIO.AspMvc.ViewModels.FornecedorViewModel

@{
    ViewBag.Title = $"Deseja realmente excluir {Model.Nome}?";
}

<h1>@ViewBag.Title</h1>

<div>
    <h4>Esta ação será permanente!</h4>
    <hr />

    <dl class="row">

        <dt class="col-sm-2">
            @Html.DisplayNameFor(expression: model => model.Nome)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(expression: model => model.Nome)
        </dd>

        <dt class="col-sm-2">
            @Html.DisplayNameFor(expression: model => model.Documento)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(expression: model => model.Documento)
        </dd>

        <dt class="col-sm-2">
            @Html.DisplayNameFor(expression: model => model.Ativo)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(expression: model => model.Ativo)
        </dd>

    </dl>

    @using (Html.BeginForm()) {
        @Html.AntiForgeryToken()

        <div class="form-group">
            <input type="submit" value="Excluir" class="btn btn-danger" />

            @Html.ActionLink(linkText: "Voltar",
                             actionName: "Index",
                             routeValues: null,
                             htmlAttributes: new { @class = "btn btn-default" })
        </div>

    }

</div>

